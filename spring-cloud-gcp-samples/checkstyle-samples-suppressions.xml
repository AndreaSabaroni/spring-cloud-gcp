<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
  <suppress files=".*" checks="LineLength" />
  <suppress files=".*\.java" checks="HideUtilityClassConstructorCheck" />

  <!-- Sample apps should be usable by someone without correct import order IDE settings. -->
  <suppress files=".*\.java" checks="ImportOrder"/>
</suppressions>
